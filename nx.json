{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "npmScope": "plantomart",
  "defaultBase": "main",
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["{projectRoot}/.next", "{projectRoot}/dist", "{projectRoot}/.wrangler"]
    },
    "lint": {
      "inputs": ["default", "{projectRoot}/.eslintrc.json"]
    },
    "test": {
      "inputs": ["default", "^production"]
    }
  },
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": ["build", "lint", "test", "deploy"],
        "parallel": 3
      }
    }
  },
  "workspaceLayout": {
    "appsDir": "apps",
    "libsDir": "libs"
  },
  "projects": {
    "web": "apps/web"
  }
}